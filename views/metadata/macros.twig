{% macro arraytostring(arr, key) %}
	{% autoescape 'json' %}
		{% for item in arr %}
		    "{{ key ? item[key] : item }}"{% if loop.last == false %},{% endif %}
		{% endfor %}
	{% endautoescape %}
{% endmacro %}

{% macro arraytoints(arr) %}
	{% autoescape 'json' %}
		{% for item in arr %}
		    {{ item }}{% if loop.last == false %},{% endif %}
		{% endfor %}
	{% endautoescape %}
{% endmacro %}
