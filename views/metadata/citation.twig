{% macro citation(c) %}
  {% import "metadata/contactref.twig" as contactref %}
  {% set project, resource, organization, links = c.resourceType == 'project', c.resource, c.organization, c.links %}
	{% autoescape 'json' %}
	  {
        "title": "{{ resource.title }}",
        "date": [
          {% if project %}
          {
            "date": "{{ resource.datecreated|default(resource.startdate) }}",
            "dateType": "creation"
          }
          {% else %}
            {% for date in c.dates %}
                {% if not loop.first %},{% endif %}
                {
                  "date": "{{ date.date }}",
                  "dateType": "{{ date.dateType }}"
                }
            {% endfor %}
          {% endif %}
        ],
        {# "edition": "", #}
        "responsibleParty": [
          {
            "party": [{"contactId": "{{ organization.uuid }}"}],
            "role": "administrator"
          }
          {% if project %}
          {{ contactref.ref(c.roles,[7,10,1,4,9],true) }}
          {% else %}
          {{ contactref.ref(c.roles,false,true) }}
          {% endif %}
        ],
        {# "presentationForm": [""], #}
        "identifier": [
          {
            "identifier": "{{ resource.resourceIdentifier }}",
            "namespace" : "urn:uuid",
            "authority": {
              "title": "{{ organization.name }}",
              {% if project %}
              "date": [{
                "date": "{{ resource.datecreated|default(resource.startdate) }}",
                "dateType": "creation"
              }],
              {% endif %}
              "responsibleParty": [
                {
                  "party": [{"contactId": "{{ organization.uuid }}"}],
                  "role": "originator"
                }
              ]
            }
          }{% if project %},
          {
            "identifier": "{{ resource.projectcode }}",
            "namespace": "lcc:arctic",
            "authority": {
              "title": "{{ organization.name }}",
              "date": [{
                "date": "{{ resource.datecreated|default(resource.startdate) }}",
                "dateType": "creation"
              }],
              "responsibleParty": [
                {
                  "party": [{"contactId": "{{ organization.uuid }}"}],
                  "role": "originator"
                }
              ]
            }
          }{% endif %}{% if resource.sciencebaseid %},
          {
            "identifier": "{{ resource.sciencebaseid }}",
            "namespace" : "gov.sciencebase.catalog",
            "authority": {
              "title": "{{ 'ScienceBase identifier for the resource' }}" {#,
              "date": [{
                "date": "{{ resource.datecreated|default(resource.startdate) }}",
                "dateType": "lastUpdate"
              }]#}
            }
          }{% endif %}
        ],
        "onlineResource": [
          {
            "uri": "{{ resource.uri }}",
            "protocol": "http",
            "name": "Resource website",
            "description": "Web page with detailed information about the resource.",
            "function": "information"
          }
          {% if resource.sciencebaseid %},
            {
              "uri": "https://www.sciencebase.gov/catalog/item/{{ resource.sciencebaseid }}",
              "protocol": "http",
              "name": "Resource ScienceBase website",
              "description": "Web page with detailed information about the resource.",
              "function": "information"
            }
          {% endif %}
          {% for link in links %}
            {% if link.onlinefunctionid in [2,5,8,9,10,12] %}
              ,
              {
                "uri": "{{ link.uri }}",
                "name": "{{ link.title }}",
                "description": "{{ link.description }}",
                "function": "{{ link.function }}"
              }
            {% endif %}
          {% endfor %}
        ]
      }
	{% endautoescape %}
{% endmacro %}
