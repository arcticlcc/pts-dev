{% autoescape 'json' %}
{
  "allocation": [
    {
      "amount": {{ funds.amount }},
      "currency": "USD",
      "sourceId": "{{ funds.sourceid }}",
      "recipientId": "{{ funds.recipientid }}",
      "matching": {{ funds.type == "Matching" ? 'true' : 'false'}}
    }
  ]

  {% if funds.startdate %}
  ,
  "timePeriod": {
    "startDateTime": "{{ funds.startdate }}"
  }
  {% endif %}
}
{% endautoescape %}
